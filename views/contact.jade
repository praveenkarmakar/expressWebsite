extends layout

block content
 .container
   form(method= 'post', action= 'contact/send')
     h2 Leave A Message
     .form-group
       label Name
       input.form-control(type="text", name= 'name', placeholder= 'Enter Name')
     .form-group
       label E-mail
       input.form-control(type="email", name= 'email', placeholder= 'Enter E-mail Id')
     .form-group
       label Message
       input.form-control(type="message", name= 'message', placeholder= 'Enter the Message')
     button.btn.btn-secondary(type= 'submit') Submit